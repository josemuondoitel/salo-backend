# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/salo?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT - User Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h

# JWT - Admin Authentication (SEPARATE)
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-in-production
ADMIN_JWT_EXPIRATION=4h
ADMIN_JWT_ISSUER=salo-admin

# Cloudinary (MANDATORY)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Google OAuth (Backend Token Verification)
GOOGLE_CLIENT_ID=your-google-client-id

# App
PORT=3000
NODE_ENV=development

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Subscription
SUBSCRIPTION_MONTHLY_AMOUNT=5000
SUBSCRIPTION_EXPIRATION_CHECK_CRON="0 0 * * *"
